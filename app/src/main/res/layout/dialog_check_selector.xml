<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_605348_10r"
       	android:orientation="vertical"
        android:paddingBottom="55dp">
        
        <TextView
            android:id="@+id/checkselector_dialog_title_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:paddingLeft="5dp"/>
        
        <View 
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#706358"
            android:layout_marginTop="5dp"/>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp" >

            <LinearLayout
                android:id="@+id/checkselector_dialog_content_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                
            </LinearLayout>
        </ScrollView>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="5dp" >

        <CheckBox
            android:id="@+id/checkselector_dialog_check_all_cb"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:text="@string/select_all" 
            android:textSize="20sp"
            android:textColor="#CCCCCC"/>

        <Button
            android:id="@+id/checkselector_dialog_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/btn_edit_save"
            android:text="@string/confirm"
            android:textColor="#CCCCCC"
            android:textSize="25sp" />
    </LinearLayout>

</FrameLayout>