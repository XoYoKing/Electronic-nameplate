<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="240dp"
        android:background="@drawable/bg_605348_10r"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/custom_dialog_title_lay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">


            <TextView
                android:id="@+id/custom_dialog_title_tv"
                style="@style/custom_dialog_text_title"
                android:layout_weight="30"
                android:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#33FFFFFF" />

        </LinearLayout>

        <TextView
            android:id="@+id/custom_dialog_content_tv"
            style="@style/custom_dialog_text_content"
            android:layout_weight="5"
            android:text="" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center">

            <Button
                android:id="@+id/custom_dialog_first_btn"
                style="@style/custom_dialog_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

            <Button
                android:id="@+id/custom_dialog_second_btn"
                style="@style/custom_dialog_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>