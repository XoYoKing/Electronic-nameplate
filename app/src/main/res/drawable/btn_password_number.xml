<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape >
            <gradient android:angle="270" android:endColor="#33FFFFFF" android:startColor="#33FFFFFF" />
            <stroke android:width="4sp" android:color="#AAFFFFFF" />
            <corners android:radius="500dp" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <gradient android:angle="270" android:endColor="#00FFFFFF" android:startColor="#00FFFFFF" />
            <stroke android:width="3sp" android:color="#AAFFFFFF" />
            <corners android:radius="30dp" />
        </shape>
    </item>
</selector>
